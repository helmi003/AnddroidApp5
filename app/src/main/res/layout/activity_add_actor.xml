<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".Activities.AddActorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_blue"
                android:gravity="center_vertical"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/appBarTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add actor"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Actor Name Input -->
            <EditText
                android:id="@+id/actorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Actor Name"
                android:textColorHint="@color/white"
                android:padding="12dp"
                android:textColor="@color/white" />
            <!-- Description Input -->

            <!-- Release Date Input -->

            <!-- Actor Bio Input -->
            <EditText
                android:id="@+id/actorBio"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Biography"
                android:padding="12dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp" />

            <!-- Profile Image Section -->
            <ImageView
                android:id="@+id/actorProfileImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_placeholder_image"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:onClick="chooseImage"
                android:contentDescription="Profile image of the actor" />


            <!-- Add Actor Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addActorButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/orange_button_background"
                android:text="Add Actor"
                android:padding="12dp"
                android:elevation="4dp"  />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
