<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/actorProfileImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_placeholder_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/actorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actor Name"
            android:textStyle="bold"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/actorBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short biography..."
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Edit and Delete Buttons with white tint -->
    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:contentDescription="Edit Actor"
        android:background="?attr/selectableItemBackground"
        android:layout_marginStart="8dp"
        android:tint="@color/white" /> <!-- Set tint to white -->

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:contentDescription="Delete Actor"
        android:background="?attr/selectableItemBackground"
        android:layout_marginStart="8dp"
        android:tint="@color/white" /> <!-- Set tint to white -->
</LinearLayout>
